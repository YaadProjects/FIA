<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/accelerate_interpolator"
    android:fillBefore="false"
    android:duration="300">
    <alpha
        android:fromAlpha="0.4" android:toAlpha="1.0" />
    <scale
        android:scaleGravity="center"
        android:fromXScale="0.4" android:toXScale="1.0"
        android:fromYScale="0.4" android:toYScale="1.0" />
    <translate
        android:fromXDelta="30%" android:toXDelta="0%"
        android:fromYDelta="30%" android:toYDelta="0%"/>
</set>